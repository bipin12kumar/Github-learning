---
- hosts: server-1
  user: ubuntu
  become: yes
  gather_facts: no


  tasks:



  - name: intall apache2
    apt: name=apache2 state=latest

  - name: create index.html
    file: 
      path: /var/www/html/index.html
      state: touch 
      
  - name: add a line to index.html
    lineinfile: 
      path: /var/www/html/index.html
      line: "hello world!"
      
  - name: start and enable apache2
    service: name=apache2.service state=started enabled=yes
  